<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - Coupon Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="text-center mb-4 text-primary">üéõÔ∏è Admin Dashboard</h2>

    <!-- Section: Add New Coupon -->
    <div class="card mb-4 shadow">
      <div class="card-header fw-bold">‚ûï Add New Coupon</div>
      <div class="card-body">
        <form action="/admin/coupons" method="POST">
          <div class="row g-3">
            <div class="col-md-4">
              <input type="text" name="code" class="form-control" placeholder="Coupon Code" required>
            </div>
            <div class="col-md-6">
              <input type="text" name="description" class="form-control" placeholder="Description" required>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-success w-100">Add</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Section: Existing Coupons -->
    <div class="card mb-4 shadow">
      <div class="card-header fw-bold">üéüÔ∏è Available Coupons</div>
      <div class="card-body">
        <table class="table table-striped table-bordered">
          <thead class="table-light">
            <tr>
              <th>Code</th>
              <th>Description</th>
              <th>Used</th>
              <th>Assigned To</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% coupons.forEach(coupon => { %>
              <tr>
                <td><%= coupon.code %></td>
                <td><%= coupon.description %></td>
                <td><%= coupon.used ? "‚úÖ" : "‚ùå" %></td>
                <td><%= coupon.assignedTo || "N/A" %></td>
                <td>
                  <a href="/admin/coupons/<%= coupon._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                  <form action="/admin/coupons/<%= coupon._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Section: Claim History -->
    <div class="card shadow">
      <div class="card-header fw-bold">üìú Coupon Claim History</div>
      <div class="card-body">
        <% if (claims && claims.length > 0) { %>
          <table class="table table-sm table-hover table-bordered">
            <thead class="table-light">
              <tr>
                <th>Coupon Code</th>
                <th>IP Address</th>
                <th>Cookie ID</th>
                <th>Timestamp</th>
              </tr>
            </thead>
            <tbody>
              <% claims.forEach(claim => { %>
                <tr>
                  <td><%= claim.code || 'N/A' %></td>
                  <td><%= claim.claimedBy.ip %></td>
                  <td><%= claim.claimedBy.cookieId %></td>
                  <td><%= new Date(claim.claimedBy.timestamp).toLocaleString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-muted">No claims recorded yet.</p>
        <% } %>
      </div>
    </div>

  </div>
</body>
</html>
